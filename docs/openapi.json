{
  "openapi": "3.0.3",
  "info": {
    "title": "WTS Machines API",
    "version": "1.2.0",
    "description": "Backend für Maschinen-Monitoring mit Azure SQL, Socket.IO und Stations-Übersicht."
  },
  "servers": [
    {
      "url": "https://{host}",
      "variables": {
        "host": {
          "default": "ca-swe-wts-backend.happymeadow-a2b0a3fc.swedencentral.azurecontainerapps.io"
        }
      }
    },
    { "url": "http://localhost:8080" }
  ],
  "tags": [
    { "name": "Health" },
    { "name": "Machines" },
    { "name": "Meta" }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "getHealth",
        "tags": ["Health"],
        "summary": "Liveness",
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Ok" } } }
          }
        }
      }
    },
    "/readyz": {
      "get": {
        "operationId": "getReady",
        "tags": ["Health"],
        "summary": "Readiness (DB)",
        "responses": {
          "200": {
            "description": "DB erreichbar",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Ok" } } }
          },
          "503": {
            "description": "DB nicht erreichbar",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Ok" } } }
          }
        }
      }
    },
    "/api/machines/basic": {
      "get": {
        "operationId": "listMachinesBasic",
        "tags": ["Machines"],
        "summary": "Liste kompakter Maschinendaten",
        "responses": {
          "200": {
            "description": "Liste",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "machines": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/MachineBasic" }
                    }
                  },
                  "required": ["machines"]
                }
              }
            }
          }
        }
      }
    },
    "/api/machines/names": {
      "get": {
        "operationId": "listMachineNames",
        "tags": ["Machines"],
        "summary": "Alle Maschinennamen",
        "responses": {
          "200": {
            "description": "Namen",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MachineNames" } } }
          }
        }
      }
    },
    "/api/machines/{name}": {
      "get": {
        "operationId": "getMachineDetail",
        "tags": ["Machines"],
        "summary": "Maschinen-Details (Anzeigeformat)",
        "parameters": [
          { "name": "name", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Details",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MachineDetailDisplay" } } }
          },
          "404": {
            "description": "Nicht gefunden",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          }
        }
      }
    },
    "/api/machines/{name}/telemetry": {
      "get": {
        "operationId": "listTelemetry",
        "tags": ["Machines"],
        "summary": "Telemetry-Historie",
        "parameters": [
          { "name": "name", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "since", "in": "query", "required": false, "schema": { "type": "string", "format": "date-time" } },
          { "name": "limit", "in": "query", "required": false, "schema": { "type": "integer", "minimum": 1, "maximum": 2000, "default": 500 } }
        ],
        "responses": {
          "200": {
            "description": "Historie",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/TelemetryItemOutput" } } } }
          },
          "400": {
            "description": "Ungültiger Parameter (z. B. since)",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          },
          "404": {
            "description": "Nicht gefunden",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          }
        }
      },
      "post": {
        "operationId": "postTelemetry",
        "tags": ["Machines"],
        "summary": "Telemetry einfügen (Teil-Update)",
        "parameters": [
          { "name": "name", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/TelemetryPost" } } }
        },
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Ok" } } } },
          "404": { "description": "Maschine nicht gefunden", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/machines/{name}/metrics/{key}": {
      "get": {
        "operationId": "listMetricPoints",
        "tags": ["Machines"],
        "summary": "Gezielte Metrik für eine Maschine",
        "parameters": [
          { "name": "name", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "key", "in": "path", "required": true, "schema": { "$ref": "#/components/schemas/MetricKey" } },
          { "name": "since", "in": "query", "required": false, "schema": { "type": "string", "format": "date-time" } },
          { "name": "limit", "in": "query", "required": false, "schema": { "type": "integer", "minimum": 1, "maximum": 2000, "default": 50 } }
        ],
        "responses": {
          "200": {
            "description": "Werte",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/MetricPoint" } } } }
          },
          "400": {
            "description": "Ungültiger Parameter (z. B. key oder since)",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          },
          "404": {
            "description": "Maschine nicht gefunden",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          }
        }
      }
    },

    "/api/stations/names": {
      "get": {
        "operationId": "listStationNames",
        "tags": ["Machines"],
        "summary": "Alle Stationsnamen (distinct)",
        "responses": {
          "200": {
            "description": "Liste",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/StationNameList" } } }
          }
        }
      }
    },
    "/api/stations": {
      "get": {
        "operationId": "listStations",
        "tags": ["Machines"],
        "summary": "Stationen inkl. zugehöriger Maschinen",
        "responses": {
          "200": {
            "description": "Liste",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/StationList" } } }
          }
        }
      }
    },
    "/api/stations/{station}/machines": {
      "get": {
        "operationId": "listMachinesForStation",
        "tags": ["Machines"],
        "summary": "Maschinen für eine Station",
        "parameters": [
          { "name": "station", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Liste",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "station": { "type": "string" },
                    "machines": { "type": "array", "items": { "type": "string" } }
                  },
                  "required": ["station", "machines"]
                }
              }
            }
          }
        }
      }
    },

    "/api/meta/metrics": {
      "get": {
        "operationId": "listMetricsMeta",
        "tags": ["Meta"],
        "summary": "Alle abfragbaren Metriken",
        "responses": {
          "200": {
            "description": "Liste",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MetricsList" } } }
          }
        }
      }
    },
    "/api/meta/formats/datetime": {
      "get": {
        "operationId": "getDateTimeFormat",
        "tags": ["Meta"],
        "summary": "Formatbeschreibung für date-time (since)",
        "responses": {
          "200": {
            "description": "Format",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/DateTimeFormat" } } }
          }
        }
      }
    },
    "/api/openapi.json": {
      "get": {
        "operationId": "getOpenApiJson",
        "tags": ["Meta"],
        "summary": "Rohes OpenAPI-Dokument",
        "responses": {
          "200": {
            "description": "JSON",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Ok": {
        "type": "object",
        "properties": { "ok": { "type": "boolean" } },
        "required": ["ok"]
      },
      "Error": {
        "type": "object",
        "properties": { "error": { "type": "string" } },
        "required": ["error"]
      },

      "MachineBasic": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "identifikation": { "type": "string" },
          "letzteWartung": { "type": "string" },
          "durchgängigeLaufzeit": { "type": "number" },
          "stationName": { "type": "string", "nullable": true },
          "stationType": { "type": "string", "nullable": true }
        },
        "required": ["name", "identifikation", "letzteWartung", "durchgängigeLaufzeit"]
      },
      "MachineNames": {
        "type": "object",
        "properties": { "names": { "type": "array", "items": { "type": "string" } } },
        "required": ["names"]
      },
      "MachineDetailDisplay": {
        "type": "object",
        "properties": {
          "identifikation": { "type": "string" },
          "temperatur": { "type": "string", "example": "28°" },
          "durchgängigeLaufzeit": { "type": "string", "example": "2059 Minuten" },
          "Motor": {
            "type": "object",
            "properties": {
              "aktuelleLeistung": { "type": "string", "example": "56%" },
              "betriebsminutenGesamt": { "type": "string", "example": "20059 Minuten" },
              "letzteWartung": { "type": "string", "example": "01.08.2017" }
            },
            "required": ["aktuelleLeistung", "betriebsminutenGesamt", "letzteWartung"]
          },
          "geschwindigkeit": { "type": "string", "example": "2.15 m/s" },
          "stationName": { "type": "string", "nullable": true },
          "stationType": { "type": "string", "nullable": true }
        },
        "required": ["identifikation", "temperatur", "durchgängigeLaufzeit", "Motor", "geschwindigkeit"]
      },

      "TelemetryItemOutput": {
        "type": "object",
        "properties": {
          "createdAt": { "type": "string", "format": "date-time" },
          "temperatur": { "type": "number" },
          "aktuelleLeistung": { "type": "number", "minimum": 0, "maximum": 100 },
          "betriebsminutenGesamt": { "type": "number", "minimum": 0 },
          "geschwindigkeit": { "type": "number", "minimum": 0 }
        },
        "required": ["createdAt"]
      },
      "TelemetryPost": {
        "type": "object",
        "properties": {
          "temperatur": { "type": "number" },
          "aktuelleLeistung": { "type": "number", "minimum": 0, "maximum": 100 },
          "betriebsminutenGesamt": { "type": "number", "minimum": 0 },
          "geschwindigkeit": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false,
        "minProperties": 1
      },

      "MetricKey": {
        "type": "string",
        "enum": ["temperatur", "aktuelleLeistung", "betriebsminutenGesamt", "geschwindigkeit"]
      },
      "MetricPoint": {
        "type": "object",
        "properties": {
          "createdAt": { "type": "string", "format": "date-time" },
          "value": { "type": "number" }
        },
        "required": ["createdAt", "value"]
      },
      "MetricsList": {
        "type": "object",
        "properties": {
          "metrics": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "key": { "$ref": "#/components/schemas/MetricKey" },
                "label": { "type": "string" },
                "unit": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["key", "label", "unit"]
            }
          }
        },
        "required": ["metrics"]
      },
      "StationNameList": {
        "type": "object",
        "properties": {
          "stations": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["stations"]
      },
      "StationList": {
        "type": "object",
        "properties": {
          "stations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string", "nullable": true },
                "machines": { "type": "array", "items": { "type": "string" } }
              },
              "required": ["name", "machines"]
            }
          }
        },
        "required": ["stations"]
      },
      "DateTimeFormat": {
        "type": "object",
        "properties": {
          "format": { "type": "string", "example": "ISO 8601 (RFC 3339)" },
          "examples": {
            "type": "array",
            "items": { "type": "string" },
            "example": ["2025-08-29T12:34:56Z", "2025-08-29T12:34:56+02:00"]
          },
          "note": { "type": "string", "example": "UTC 'Z' empfohlen. Beispiel: 2025-08-29T12:34:56Z" },
          "now": { "type": "string", "format": "date-time" }
        },
        "required": ["format", "examples", "now"]
      }
    }
  }
}
